{
  "name": "voyahchat-site",
  "version": "1.0.0",
  "description": "VoyahChat site",
  "scripts": {
    "setup": "node lib/build/setup.js",
    "clean": "rm -rf .build/ site/",
    "build:css": "node lib/build/build-css.js",
    "build:assets": "node lib/build/build-assets.js",
    "build:images": "node lib/build/build-images.js",
    "build:js": "node lib/build/build-js.js",
    "build:sitemap": "node lib/build/build-sitemap.js",
    "build:nginx": "node lib/build/build-nginx.js",
    "build:templates": "node lib/build/build-templates.js",
    "build:html": "node lib/build/build-html.js",
    "build:timestamps": "node lib/build/build-timestamps.js",
    "build:compression": "node lib/build/build-compression.js",
    "build": "npm --silent run clean && npm --silent run build:images && npm --silent run build:assets && npm --silent run build:parallel && npm --silent run build:sitemap && npm --silent run build:html && npm --silent run build:compression && npm --silent run build:timestamps",
    "build:parallel": "concurrently --silent --kill-others-on-fail \"npm --silent run build:css\" \"npm --silent run build:js\" \"npm --silent run build:nginx\" \"npm --silent run build:templates\"",
    "serve": "npm --silent run stop && mkdir -p /tmp/nginx-logs && nginx -c $(pwd)/.build/nginx.conf && echo 'Server running at http://localhost:8080'",
    "start": "npm --silent run build && npm --silent run serve",
    "stop": "pkill -f nginx || true",
    "test": "npm --silent run build && node node_modules/.bin/ava --config=config/config-ava.js",
    "lint": "npx eslint lib config --fix --config config/config-eslint.mjs",
    "deploy": "node lib/build/deploy.js",
    "benchmark": "node lib/build/benchmark.js"
  },
  "dependencies": {
    "@mongodb-js/zstd": "^7.0.0",
    "autoprefixer": "^10.4.16",
    "ava": "^6.4.1",
    "basic-ftp": "^5.1.0",
    "concurrently": "^9.2.1",
    "csso": "^5.0.5",
    "eslint": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.0.0",
    "markdown-it-video": "^0.6.3",
    "nunjucks": "^3.2.4",
    "postcss": "^8.4.31",
    "postcss-import": "^16.1.1",
    "postcss-url": "^10.1.3",
    "terser": "^5.44.0",
    "vnu-jar": "^24.10.17"
  }
}
